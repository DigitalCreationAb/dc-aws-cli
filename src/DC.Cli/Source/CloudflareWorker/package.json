{
  "private": true,
  "name": "cloudflare-worker",
  "version": "0.1.0",
  "description": "A Cloudflare Worker",
  "scripts": {
    "build": "webpack --mode=development index.js -o dist/main.js",
    "start": "nodemon --watch dist/main.js --exec \"cloudflare-worker-local dist/main.js 172.17.0.1:$DESTINATION_PORT 3000\"",
    "watch": "webpack --mode=development index.js -o dist/main.js --watch"
  },
  "devDependencies": {
    "cloudflare-worker-local": "^1.12.1",
    "nodemon": "^2.0.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
